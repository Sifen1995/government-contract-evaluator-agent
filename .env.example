# Database Configuration
DATABASE_URL=mysql+pymysql://govai_user:your_password_here@localhost:3306/govai

# JWT Authentication
# Generate with: openssl rand -hex 32
JWT_SECRET=your_jwt_secret_here_generate_with_openssl
JWT_ALGORITHM=HS256
JWT_EXPIRY_HOURS=24

# API URLs
API_URL=http://localhost:8000
FRONTEND_URL=http://localhost:3000

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Email Configuration (console mode for dev, sendgrid for production)
EMAIL_MODE=console
SENDGRID_API_KEY=your_sendgrid_api_key_here
EMAIL_FROM=noreply@govai.com

# External APIs
# SAM.gov API Key - Get your API key at: https://sam.gov/data-services/
SAM_API_KEY=your_sam_gov_api_key_here

# OpenAI API Key - Get your API key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Application Settings
APP_NAME=GovAI
APP_VERSION=1.0.0
DEBUG=true
