# Production Environment Configuration
# Copy this file to .env.production and fill in real values

# =============================================================================
# REQUIRED - Must be set before deployment
# =============================================================================

# Database Configuration (use strong passwords!)
MYSQL_ROOT_PASSWORD=CHANGE_ME_STRONG_ROOT_PASSWORD
MYSQL_DATABASE=govai
MYSQL_USER=govai_user
MYSQL_PASSWORD=CHANGE_ME_STRONG_DB_PASSWORD
DATABASE_URL=mysql+pymysql://govai_user:CHANGE_ME_STRONG_DB_PASSWORD@mysql:3306/govai

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# JWT Authentication (generate a random 64+ character string)
# Generate with: openssl rand -hex 32
JWT_SECRET=CHANGE_ME_GENERATE_WITH_OPENSSL_RAND_HEX_32
JWT_ALGORITHM=HS256
JWT_EXPIRY_HOURS=24

# API URLs (update with your domain)
API_URL=https://api.yourdomain.com
FRONTEND_URL=https://yourdomain.com

# CORS Origins (your frontend domain)
CORS_ORIGINS=https://yourdomain.com

# Celery Configuration
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# =============================================================================
# EMAIL CONFIGURATION (Required for email features)
# =============================================================================

# Email Mode: 'sendgrid' for production, 'console' for testing
EMAIL_MODE=sendgrid

# SendGrid API Key (get from https://sendgrid.com)
SENDGRID_API_KEY=SG.xxxxxxxxxxxxxxxxxxxx

# From email address (must be verified in SendGrid)
EMAIL_FROM=noreply@yourdomain.com

# =============================================================================
# EXTERNAL API KEYS (Required for core functionality)
# =============================================================================

# SAM.gov API Key (get from https://sam.gov/data-services/)
SAM_API_KEY=your_sam_api_key_here

# OpenAI API Key (get from https://platform.openai.com/api-keys)
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxx

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

APP_NAME=GovAI
APP_VERSION=1.0.0

# IMPORTANT: Set to false in production!
DEBUG=false
