# GovAI Production Environment Configuration
# Copy this to .env.production and fill in real values

# Database - RDS PostgreSQL
DATABASE_URL=postgresql://user:password@your-rds-endpoint.amazonaws.com:5432/govai

# JWT Authentication
# Generate with: openssl rand -hex 32
JWT_SECRET=generate_a_secure_64_character_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRY_HOURS=24

# API URLs - Update with your domain
API_URL=https://api.yourdomain.com
FRONTEND_URL=https://yourdomain.com

# CORS Origins
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Email Configuration
EMAIL_MODE=sendgrid
SENDGRID_API_KEY=your_sendgrid_api_key
EMAIL_FROM=noreply@yourdomain.com

# External APIs
SAM_API_KEY=your_sam_gov_api_key
OPENAI_API_KEY=your_openai_api_key

# Application Settings
APP_NAME=GovAI
APP_VERSION=1.0.0
DEBUG=false
